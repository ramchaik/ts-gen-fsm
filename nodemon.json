{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**"],
  "verbose": true,
  "colours": true,
  "execMap": {
    "js": "node --harmony",
    "ts": "node --loader ts-node/esm --experimental-modules --es-module-specifier-resolution=node"
  },
  "events": {},
  "watch": ["src/"],
  "env": {
    "NODE_ENV": "dev"
  },
  "ext": "ts,js"
}